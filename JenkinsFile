pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'DevOps Tool: Maven'
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                echo 'DevOps Tool: JUnit'
            }
            post {
                success {
                    emailext subject: "Build Success Status Email",
                    body: "${currentBuild.fullDisplayName} has successfully built. Console Output:\n\n${currentBuild.rawBuild.getLog(1000)}",
                    to: "deepak@webimor.com"
                }
                failure {
                    emailext subject: "Build Failure Status Email",
                    body: "${currentBuild.fullDisplayName} has failed to build. Console Output:\n\n${currentBuild.rawBuild.getLog(1000)}",
                    to: "deepak@webimor.com"
                }
            }
        }

        stage('Code Analysis') {
            steps {
                echo 'DevOps Tool: SonarQube'
            }
        }

        stage('Security Scan') {
            steps {
                echo 'DevOps Tool: OWASP ZAP'
            }
            post {
                success {
                    emailext subject: "Build Success Status Email",
                    body: "${currentBuild.fullDisplayName} has successfully passed security scan. Console Output:\n\n${currentBuild.rawBuild.getLog(1000)}",
                    to: "deepak@webimor.com"
                }
                failure {
                    emailext subject: "Build Failure Status Email",
                    body: "${currentBuild.fullDisplayName} has failed security scan. Console Output:\n\n${currentBuild.rawBuild.getLog(1000)}",
                    to: "deepak@webimor.com"
                }
            }
        }

        stage('Deploy to Staging') {
            steps {
                echo 'DevOps Tool: AWS Elastic Beanstalk'
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                echo 'DevOps Tool: Selenium WebDriver'
            }
        }

        stage('Deploy to Production') {
            steps {
                echo 'DevOps Tool: Ansible'
            }
        }
    }
    
    post {
        success {
            echo 'Sending Success Notification Emails'
        }
        failure {
            echo 'Sending Failure Notification Emails'
        }
    }
}
